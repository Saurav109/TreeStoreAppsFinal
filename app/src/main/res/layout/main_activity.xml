<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:src="@drawable/account"
                        android:id="@+id/account_image"
                        android:padding="2sp"
                        android:layout_margin="5sp"
                        android:onClick="goToAccount"/>
                    <TextView
                        android:layout_toEndOf="@id/account_image"
                        android:textColor="@color/white"
                        android:id="@+id/header_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome User"
                        android:textSize="25sp"
                        android:padding="5sp"
                        android:textStyle="bold"
                        android:onClick="goToAccount"/>
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="50sp"
                        android:src="@mipmap/ideas"
                        android:padding="5sp"
                        android:layout_toEndOf="@id/header_text"
                        android:onClick="goToIdeas"/>
                    <ImageView
                        android:layout_margin="5sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:padding="5sp"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:src="@mipmap/cart"
                        android:onClick="goToCart"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/header_text"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/search_bar"
                            android:drawableLeft="@mipmap/search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/fake_search_bar"
                            android:text=" search"
                            android:textSize="17sp"
                            android:padding="10sp"
                            android:layout_margin="10sp"
                            android:onClick="goToSearch"/>
                        <!--<ImageView-->
                            <!--android:padding="10sp"-->
                            <!--android:layout_width="45sp"-->
                            <!--android:layout_height="45sp"-->
                            <!--android:layout_alignParentEnd="true"-->
                            <!--android:layout_centerVertical="true"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:layout_marginEnd="10dp"-->
                            <!--android:onClick="recog"-->
                            <!--android:src="@mipmap/cam" />-->
                    </RelativeLayout>
                </RelativeLayout>
            </FrameLayout>
        </android.support.v7.widget.CardView>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suggestion and Blog"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_margin="10sp"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/suggestions_ryc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Our Products"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_margin="10sp"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/products_ryc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </ScrollView>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:background="@color/white"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:src="@mipmap/location"
        android:onClick="findPlantStore"/>
</RelativeLayout>